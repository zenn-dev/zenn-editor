{
  "name": "zenn-cli",
  "version": "0.2.8-alpha.1",
  "description": "Preview Zenn content locally.",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenn-dev/zenn-editor.git",
    "directory": "packages/zenn-cli"
  },
  "license": "MIT",
  "bin": {
    "zenn": "dist/server/zenn.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "run-p dev:server dev:client",
    "dev:client": "wait-on http://localhost:8000 && vite",
    "dev:server": "nodemon -r dotenv/config ./src/server/zenn.ts",
    "clean": "rimraf dist/*",
    "build": "pnpm clean && run-p build:client build:server",
    "build:client": "tsc --project tsconfig.client.json && vite build",
    "build:server": "tsc --project tsconfig.server.json --noEmit && rspack build -c rspack.server.js",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:prettier": "prettier .",
    "lint-strict": "run-s lint-strict:*",
    "lint-strict:eslint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint-strict:prettier": "prettier --check .",
    "fix": "run-s fix:*",
    "fix:eslint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "fix:prettier": "prettier -w .",
    "test": "run-s test:client test:server",
    "test:client": "vitest run --config vitest.client.config.ts",
    "test:server": "vitest run --config vitest.server.config.ts",
    "exec:zenn": "node ./dist/server/zenn.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@rspack/cli": "^1.5.8",
    "@rspack/core": "^1.5.8",
    "@types/configstore": "^6.0.2",
    "@types/emoji-regex": "^9.2.2",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/styled-components": "^5.1.34",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.4",
    "arg": "^5.0.2",
    "boxen": "^8.0.1",
    "cheerio": "1.1.2",
    "chokidar": "^4.0.3",
    "clsx": "^2.1.1",
    "colors": "1.4.0",
    "configstore": "^7.1.0",
    "dotenv": "^17.2.3",
    "emoji-regex": "^10.6.0",
    "esbuild": "^0.25.11",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "express": "^5.1.0",
    "fs-extra": "^11.3.2",
    "gray-matter": "^4.0.3",
    "history": "^5.3.0",
    "image-size": "^2.0.2",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "open": "^10.2.0",
    "path": "^0.12.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "rimraf": "^6.0.1",
    "rocon": "^1.2.8",
    "styled-components": "^6.1.19",
    "supertest": "^7.1.4",
    "swr": "^2.3.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.11",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1",
    "ws": "^8.18.3",
    "zenn-content-css": "workspace:*",
    "zenn-embed-elements": "workspace:*",
    "zenn-markdown-html": "workspace:*",
    "zenn-model": "workspace:*"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "4d1b8deae4a6f359c0e6b25bb74aebd69af93458"
}
