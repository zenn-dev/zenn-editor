{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "exclude": ["src/server", "node_modules", "**/__tests__"]
}
