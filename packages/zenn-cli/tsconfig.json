{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "lib": ["ESNext", "dom"]
  },
  "exclude": ["**/__tests__"],
  "include": ["src"]
}
