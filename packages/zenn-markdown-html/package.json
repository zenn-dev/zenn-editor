{
  "name": "zenn-markdown-html",
  "version": "0.2.10-alpha.1",
  "license": "MIT",
  "description": "Convert markdown to zenn flavor html.",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenn-dev/zenn-editor.git",
    "directory": "packages/zenn-markdown-html"
  },
  "files": [
    "lib"
  ],
  "exports": {
    ".": "./lib/index.js",
    "./lib/utils": "./lib/utils/index.js"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "pnpm clean && run-p build:*",
    "build:src": "babel ./src --extensions '.ts,.tsx' --ignore '**/*.d.ts' --out-dir ./lib",
    "build:types": "tsc --project ./tsconfig.build.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier .",
    "lint-strict": "run-s lint-strict:*",
    "lint-strict:eslint": "eslint . --max-warnings 0",
    "lint-strict:prettier": "prettier --check .",
    "fix": "run-s fix:*",
    "fix:eslint": "eslint . --fix",
    "fix:prettier": "prettier -w .",
    "test": "vitest run"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.38.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.9.1",
    "@types/prismjs": "^1.26.5",
    "@types/sanitize-html": "^2.16.0",
    "babel-plugin-prismjs": "^2.1.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "node-html-parser": "^7.0.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@steelydylan/markdown-it-imsize": "^1.0.2",
    "cheerio": "1.1.2",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-inline-comments": "^1.0.1",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-task-lists": "^2.1.1",
    "prismjs": "^1.30.0",
    "sanitize-html": "^2.17.0"
  },
  "gitHead": "7da0b06004cf615e42e475de47011c4670eb7318",
  "publishConfig": {
    "access": "public"
  }
}
